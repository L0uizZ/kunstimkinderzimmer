    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <style>
        .banner {
            margin-bottom: -56px;
        }
        .content-heading {
            margin-top: 0px;
            text-align: left;
            font-size: 50px;
            margin-bottom: 50px;
        }
        .language {
        }
        .content {
            display: block;
            text-align: left;
            font-size: 20px;
        }
        .line-bottom {
            margin-top: 150px;
        }
        .authors {
            width: 274px;
            height: 38px;
            font-family: AktivGrotesk;
            font-size: 38px;
            font-weight: 500;
            text-align: left;
            color: #303030;
        }
        .spacer-line {
            width: 52px;
            height: 2px;
            border: solid 2px #303030;
            margin-top: 37px;
        }
        .initial {
            width: 110px;
            height: 150px;
            font-family: liberation_sansregular;
            font-size: 150px;
            font-weight: bold;
            letter-spacing: 5px;
            text-align: left;
            margin-top: 130px;
            margin-bottom: -55px;
            color: #303030;
        }

        /**Tablet*/
        @media only screen and (max-width: 767px) {
            .banner {
                margin-left: 50px;
                margin-bottom: 0px;
                width: 85%;
            }
            .content {
                display: none;
            }
            .content-heading {
                margin-top: 50px;
                text-align: center;
                font-size: 40px;
            }
            .language {
                margin-top: -70px;
                margin-left: 650px;
            }
            .line-bottom {
                margin-top: 100px;
            }
            .thin-font a{
                color: #303030;
            }
            .initial {
                font-size: 110px;
            }
        }
        @media only screen and (max-width: 479px) {
            .banner {
                margin-left: 40px;
                margin-bottom: 0px;
                width: 65%;
            }
            .language {
                margin-top: -70px;
                margin-left: 70px;
            }
            .content {
                display: block;
                text-align: center;
                margin-left: 260px;
            }
            .content-heading {
                margin-left: 110px;
                margin-top: 50px;
                text-align: left;
                font-size: 30px;
            }
            .content {
                margin-left: 120px;
            }
            .initial {
                font-size: 80px;
            }
        }
    </style>
    <title>Kunst im Kinderzimmer</title>
</head>

<body class="site">
<header>
    <div class="container">
        <div class="navigation-mobile">
            <button class="menu-button">Menu</button>
            <div class="menu-content">
                <a href="/">Home</a>
                <a href="/collection">Sammlung</a>
                <a href="/blog">Blog</a>
                <a href="/authors">K&uuml;nstler</a>
            </div>
        </div>

        <div class="language thin-font">
            <a href="">/EN</a><a style="color:#de202c;" href="">DE</a>
        </div>

        <div class="banner">
             <img src="banner.png" width="30%">
        </div>

        <nav class="default-font clearfix">
             <ul class="navigation">
                 <li><a href="">Home</a></li>
                 <li><a href="">Sammlung</a></li>
                 <li><a href="">Blog</a></li>
                 <li><a href="">KÃ¼nstler</a></li>
             </ul>
        </nav>
        <hr class="line-top"/>
    </div>
</header>



<main>
    <div class="container">
        <div class="content-heading default-font">K&uuml;nstlerverzeichnis</div><br/>
        <div class="content row">
                    {% for letter, authorData in authors %}
                        {% if authorData %}
                            <div class="col-xs-12 col-md-4">
                                <div class="initial">{{ letter }}</div>
                                {% for author in authorData %}
                                        <div class="authors"><a class="default-font" href="/list/{{author.name}}">{{ author.name }}<br/></a></div>
                                {% endfor %}
                                <div class="spacer-line default-font"></div>
                            </div>
                        {% endif %}
                    {% endfor %}
        </div>
    </div>
</main>



<footer>
    <div class="container">
        <hr class="line-bottom"/>
         <div class="contact-impressum default-font"><a href="/contact">Impressum&nbsp;/&nbsp;Kontakt</a></div>
         <br/><br/>
    </div>
</footer>

<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
